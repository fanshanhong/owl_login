<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#e91e63"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/owl_head_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/owl"
        android:scaleType="center"
        android:layout_marginBottom="0dp"
        android:layout_above="@+id/employeeid_layout"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/left_arm_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/owl_head_view"
        android:visibility="invisible"
        android:layout_marginRight="-32dp"
        android:layout_toLeftOf="@id/owl_head_view"
        android:layout_marginTop="-32dp"
        android:src="@mipmap/left_arm"/>
    <ImageView
        android:id="@+id/right_arm_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/owl_head_view"
        android:layout_toRightOf="@id/owl_head_view"
        android:layout_marginTop="-32dp"
        android:visibility="invisible"
        android:layout_marginLeft="-32dp"
        android:src="@mipmap/right_arm"/>
    <LinearLayout
        android:id="@+id/employeeid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-6dp"
        android:layout_marginRight="30dp"
        android:background="@mipmap/login_text_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/employeeid_edit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:background="@null"
            android:drawableLeft="@mipmap/user"
            android:gravity="center_vertical|left"
            android:hint="请输入工号"
            android:paddingLeft="24dp"
            android:textColor="#999999"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/password_edit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="8dp"
            android:drawableLeft="@mipmap/lock"
            android:gravity="center_vertical|left"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="24dp"
            android:textColor="#999999"
            android:textSize="18dp" />
    </LinearLayout>



    <ImageView
        android:id="@+id/left_hand_view"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:src="@mipmap/hand"
        android:layout_marginBottom="-8dp"
        android:layout_marginRight="16px"
        android:layout_above="@id/employeeid_layout"
        android:layout_toLeftOf="@id/owl_head_view"/>
    <ImageView
        android:id="@+id/right_hand_view"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:src="@mipmap/hand"
        android:layout_marginBottom="-8dp"
        android:layout_above="@id/employeeid_layout"
        android:layout_marginLeft="16px"
        android:layout_toRightOf="@id/owl_head_view"/>

</RelativeLayout>
